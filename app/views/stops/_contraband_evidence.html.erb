<div class="container">
  <h2> Contact - 1</h2>
  <%= form_tag contraband_evidence_stops_path, :method => :get, :remote => true, :id => 'contraband_evidence_form',:class => "form-horizontal form-bordered"  do %>
  <div class="row row-buffer">
    <label>Contraband Evidence: <em>*</em></label><span href="#" class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="right" title="Officer's information">  </span><b class='contrabandEvidenceError'style="display:none;">Please select atleast one option</b>
      <p style="font-family:Times New Roman;"> Please enter any contraband or evidence discovered, including any in plain view or as a result of a search.</p>
        <div class="col-md-6">
            <%= check_box_tag "contraband_evidence[]", "1" %>&nbsp None <br>
            <%= check_box_tag "contraband_evidence[]", "2" %>&nbsp Firearm(s) <br>
            <%= check_box_tag "contraband_evidence[]", "3" %>&nbsp Ammunition <br>
            <%= check_box_tag "contraband_evidence[]", "4" %>&nbsp Weapon(s) other than a firearm <br>
            <%= check_box_tag "contraband_evidence[]", "5" %>&nbsp Drugs/narcotics <br>
            <%= check_box_tag "contraband_evidence[]", "6" %>&nbsp Alcohol <br>
            <%= check_box_tag "contraband_evidence[]", "7" %>&nbsp Money <br>
            <%= check_box_tag "contraband_evidence[]", "8" %>&nbsp Drug paraphernalia <br>
            <%= check_box_tag "contraband_evidence[]", "9" %>&nbsp Suspected stolen property <br>
            <%= check_box_tag "contraband_evidence[]", "10" %>&nbsp Cell phone(s) or electronic device(s) <br>
            <%= check_box_tag "contraband_evidence[]", "11" %>&nbsp Other contraband or evidence <br>
        </div>
  </div>

  <div class="row row-buffer pull-right">
     <input type="submit" value="Next" class="btn btn-primary pull-right contraband_evidence_submit">
  </div>

  <% end %>

</div>

  <script>
  $('.basis_for_search_submit').click(function(){
    if($('.contraband_evidence:checked').length < 1){
      $('.contrabandEvidenceError').show();
      return false;
    }
    else{
      $('.contrabandEvidenceError').hide();
    }

  });
  </script>
