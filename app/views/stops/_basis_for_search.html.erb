    <div class="control-group">
      <div class="controls span2">
        <h4> Basis for Search</h4>
        <div class="col-md-6">
        <%= check_box_tag "basis_for_search[consent_given]", "", false, class: "basis_for_search" %>&nbsp Consent given <br>
        <%= check_box_tag "basis_for_search[officer_safety]", "", false, class: "basis_for_search" %>&nbsp Officer safety/safety of others <br>
